<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>OTP Page</title>
    <link rel="stylesheet" href="css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- partial:index.partial.html -->
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Autofocus Field</title>
        <link rel="stylesheet" type="text/css" href="css/otp_style.css" />
      </head>
      <body>
        <div class="container">
          <form action="/OTP" method="POST">
            <h1>ENTER OTP</h1>

            <div class="userInput">
              <input
                type="text"
                id="first"
                name="otp1"
                maxlength="1"
                onkeyup="clickEvent(this,'second')"
              />
              <input
                type="text"
                id="second"
                name="otp2"
                maxlength="1"
                onkeyup="clickEvent(this,'third')"
              />
              <input
                type="text"
                id="third"
                name="otp3"
                maxlength="1"
                onkeyup="clickEvent(this,'fourth')"
              />
              <input
                type="text"
                id="fourth"
                name="otp4"
                maxlength="1"
                onkeyup="clickEvent(this,'fifth')"
              />
              <input type="text" id="fifth" name="otp5" maxlength="1" />
            </div>
            <button type="submit" >CONFIRM</button>
          </form>
        </div>
      </body>
    </html>
    <!-- partial -->
    <script src="js/otp_script.js"></script>
  </body>
</html>
